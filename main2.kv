
<ConnectionManager>:

	#orientation: 'vertical'
	FloatLayout:
	
	
        Label:
			size_hint: .2, .1
			pos_hint: {"right": 0.3, 'top': 0.8}
            text: 'MQTT'
		Label:
			id: message_text_mqtt
			size_hint: .2, .1
			pos_hint: {"right": 0.5, 'top': 0.7}
            text: ""
		ToggleButton:
			id: toggle_button_mqtt
			text: "Not connected"
			size_hint: .3, .1
			pos_hint: {"right": 0.8, 'top': .8}
			on_state:
				if self.state == 'down': self.state = root.connectMqtt()
				else: root.disconnectMQTT()
			on_state:
				if self.state == 'down': toggle_button_mqtt.text="Connected"
				else: toggle_button_mqtt.text="Not connected"
