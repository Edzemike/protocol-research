#:import FloatLayout kivy.uix.floatlayout
<ConnectionManager>:

	orientation: 'vertical'

	AccordionItem:
		title: 'MQTT'
		FloatLayout:
			size_hint: 1, 1
			Button:
				pos_hint: {"x": 0, 'y': 0.75}
				size_hint: 1, .2
				text: 'Prisijungti ir prenumeruoti temą'
				on_press: root.connectMqtt()
			Button:
				pos_hint: {"x": 0, 'y': 0.5}
				size_hint: 1, .2
				text: 'Atsijungti'
				on_press: root.disconnectMQTT()
		

	AccordionItem:
		title: 'AMQP'
		FloatLayout:
			size_hint: 1, 1
			Button:
				pos_hint: {"x": 0, 'y': 0.75}
				size_hint: 1, .2
				text: 'Prisijungti'
				#on_press: root.connectAmqp()
			Button:
				pos_hint: {"x": 0, 'y': 0.5}
				size_hint: 1, .2
				text: 'Prenumeruoti temą "test"'
				#on_press: root.subscripeAmqp()
			Button:
				pos_hint: {"x": 0, 'y': 0.25}
				size_hint: 1, .2
				text: 'Atsijungti nuo serverio'
				#on_press: root.disconnectAMQP()

	AccordionItem:
		title: 'STOMP'
		FloatLayout:
			size_hint: 1, 1
			Button:
				pos_hint: {"x": 0, 'y': 0.75}
				size_hint: 1, .2
				text: 'Prisijungti'
				on_press: root.connectStomp()
			Button:
				pos_hint: {"x": 0, 'y': 0.5}
				size_hint: 1, .2
				text: 'Prenuoertuoti temą "test"'
				on_press: root.subscripeStomp()
			Button:
				pos_hint: {"x": 0, 'y': 0.25}
				size_hint: 1, .2
				text: 'Atsijungti nuo serverio'
				on_press: root.disconnectStomp()
			
	